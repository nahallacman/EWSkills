{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "gcc.exe - Build and debug active file", // A friendly name for this configuration
      "type": "cppdbg", // Specifies the C++ debugger
      "request": "launch", // We want to launch (start) a new program
      "program": "${fileDirname}\\${fileBasenameNoExtension}.exe", // Path to the executable
      "args": [], // Command line arguments can be passed here
      "stopAtEntry": false, // If true, the debugger stops at the very first instruction
      "cwd": "${fileDirname}", // Sets the working directory of the program
      "environment": [],
      "externalConsole": false, // Set to true to run in a separate command prompt window
      "MIMode": "gdb",
      "miDebuggerPath": "C:\\msys64\\ucrt64\\bin\\gdb.exe", // IMPORTANT: Update this path if your MinGW installation is different
      "setupCommands": [
        {
          "description": "Enable pretty-printing for gdb",
          "text": "-enable-pretty-printing",
          "ignoreFailures": true
        }
      ],
      "preLaunchTask": "C/C++: gcc.exe build active file" // Runs the build task before debugging
    }
  ]
}